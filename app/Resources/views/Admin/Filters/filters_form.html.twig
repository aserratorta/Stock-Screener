{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'Screener' }}</h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'title' }}</th>
                                {#<td>{{ object.title }}</td>#}
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'value' }}</th>
                                {#<td>{{ object.name }}</td>#}
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'sector' }}</th>
                                {#<td>{{ object.email }}</td>#}
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'stock' }}</th>
                                {#<td>{{ object.subject }}</td>#}
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'backend.admin.your_answer' | trans }}</h4>
                    </div>
                    <div class="box-body">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
