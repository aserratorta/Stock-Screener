{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'Select' }}</h4>
                    </div>
                    <div class="box-body">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'Screener' }}</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>{{ 'ticker' }}</th>
                                    <th>{{ 'sector' }}</th>
                                    <th>{{ 'ticker' }}</th>
                                    <th>{{ 'stock' }}</th>
                                    <th>{{ 'value' }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for screener in screenersList %}
                                    <tr>
                                        <td>{{ screener.sector.ticker }}</td>
                                        <td>{{ screener.sector.title }}</td>
                                        <td>{{ screener.stock.ticker }}</td>
                                        <td>{{ screener.stock.title }}</td>
                                        <td>{{ screener.value }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
