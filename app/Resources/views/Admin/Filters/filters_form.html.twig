{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'Screener' }}</h4>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered" style="border-color:black">
                            <thead>
                                <tr class="success">
                                    <th style="border-color:black">{{ 'title' }}</th>
                                    <th style="border-color:black">{{ 'ticker' }}</th>
                                    <th style="border-color:black">{{ 'sector' }}</th>
                                    <th style="border-color:black">{{ 'value' }}</th>
                                    <th style="border-color:black">{{ 'ticker' }}</th>
                                    <th style="border-color:black">{{ 'stock' }}</th>
                                    <th style="border-color:black">{{ 'value' }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for screener in screenersList %}
                                    {% for stock in screener.sector.stocks %}
                                        {% for stockscreener in stock.screeners %}
                                            <tr>
                                                <td style="border-color:black">{{ screener.title }}</td>
                                                <td style="border-color:black">{{ screener.sector.ticker }}</td>
                                                <td style="border-color:black">{{ screener.sector.title }}</td>
                                                <td style="border-color:black">{{ screener.value }}</td>
                                                <td style="border-color:black">{{ stock.ticker }}</td>
                                                <td style="border-color:black">{{ stock.title }}</td>
                                                <td style="border-color:black">{{ stockscreener.value }}</td>
                                            </tr>
                                        {% endfor %}
                                    {% endfor %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
